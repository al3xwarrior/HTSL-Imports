
define soulNumber 22

if (var {"lostsoul"+soulNumber} == 1 0) {
    chat "&cYou have already found this lost soul."
    sound "Anvil Land" 0.7 1 "invokers_location"
}

if (var {"lostsoul"+soulNumber} == 0 0) {
    chat "&aYou have found a lost soul!"
    var {"lostsoul"+soulNumber} set 1
    var "lostsouls" inc 1
    sound "Item Pickup" 0.7 1.5 "invokers_location"
    sound "Bat Death" 0.7 0.5 "invokers_location"
}