loop 3 index {
    function {"GetPositionBehindPlayer"+(index+1)} false
    var "pet_spawn_y" set %player.pos.y%D
    var "pet_spawn_y" inc 1.0D
    dropItem null "custom_coordinates" "%var.player/behind_x% %var.player/pet_spawn_y% %var.player/behind_z%" false true false false 2 100
    pause 1
}